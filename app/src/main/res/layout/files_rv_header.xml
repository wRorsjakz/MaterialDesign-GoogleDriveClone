<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:padding="8dp">

    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/files_rv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:gravity="center_vertical"
        android:text="Name"
        android:textSize="14sp"
        android:layout_marginStart="8dp"/>

    <ImageButton
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:id="@+id/files_rv_header_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/files_rv_header_title"
        android:layout_marginStart="51dp"

        android:layout_marginEnd="-28dp"
        android:src="@drawable/ic_arrow_upward_black_24dp" />

    <ImageButton
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:id="@+id/files_rv_header_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:src="@drawable/files_rv_layout_selector" />

</RelativeLayout>