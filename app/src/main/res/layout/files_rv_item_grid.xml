<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp" android:layout_height="180dp"
    android:padding="8dp"
    android:id="@+id/files_rv_item_grid_container">

    <ImageView
        android:id="@+id/files_rv_grid_icon"
        android:src="@drawable/ic_folder_yellow_48dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <ImageButton
        android:padding="0dp"
        android:id="@+id/files_rv_openmenu_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        style="?android:attr/actionOverflowButtonStyle"/>

    <TextView
        android:id="@+id/files_rv_title_grid"
        android:maxLines="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="2dp"
        android:text="CZ1003 Mini Project"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@id/files_rv_openmenu_grid"
        android:layout_toEndOf="@id/files_rv_pad_grid"
        android:layout_alignParentBottom="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        />

    <ImageView
        android:visibility="invisible"
        android:clickable="false"
        android:padding="0dp"
        android:id="@+id/files_rv_pad_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        style="?android:attr/actionOverflowButtonStyle"/>

</RelativeLayout>