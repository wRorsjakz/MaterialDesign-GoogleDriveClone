<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/files_rv_item_grid_container"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:padding="8dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/files_rv_title_grid"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/files_rv_grid_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_folder_yellow_48dp" />

        <ImageView
            android:id="@+id/center_of_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>


    <ImageButton
        android:id="@+id/files_rv_openmenu_grid"
        style="?android:attr/actionOverflowButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="0dp" />

    <TextView
        android:id="@+id/files_rv_title_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/files_rv_openmenu_grid"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@id/files_rv_openmenu_grid"
        android:layout_toEndOf="@id/files_rv_pad_grid"
        android:gravity="center"
        android:maxLines="2"
        android:paddingHorizontal="0dp"
        android:text="Assignments"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/files_rv_pad_grid"
        style="?android:attr/actionOverflowButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:clickable="false"
        android:padding="0dp"
        android:visibility="invisible" />

</RelativeLayout>